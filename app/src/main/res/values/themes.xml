<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BarCode" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue2</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:windowSplashScreenAnimatedIcon">@android:color/transparent</item>
    </style>

    <style name="Theme.BarCode" parent="Base.Theme.BarCode" />

    <style name="input">
        <item name="android:paddingStart">23dp</item>
        <item name="android:paddingEnd">23dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="buttonGradient">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/btn_animated_gradient</item>
        <item name="backgroundTint">@null</item>
    </style>
    <style name="buttonBiasa">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/btn_blue</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="buttonYellow">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/btn_yellow</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="buttonLogout">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button_red</item>
        <item name="backgroundTint">@null</item>
    </style>
    
    <style name="fab_3_rounded">
        <item name="cornerSize">50%</item>
    </style>

</resources>